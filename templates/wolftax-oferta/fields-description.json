{
  "template_name": "WolfTax - Szablon wielostronicowy",
  "template_id": "wolftax",
  "description": "Kompleksowy szablon oferty z wieloma plikami DOCX. Produkty wstawiane są między doc3 a doc4.",

  "files": {
    "Dok1.docx": {
      "order": 1,
      "name": "Strona tytułowa",
      "description": "Główna strona tytułowa oferty z logotypem",
      "size": "~1.3MB",
      "has_placeholders": false,
      "placeholders": [],
      "notes": "Statyczna strona bez pól do wypełnienia"
    },

    "Doc2.docx": {
      "order": 2,
      "name": "Wprowadzenie",
      "description": "Wprowadzenie do oferty z podstawowymi informacjami",
      "size": "~412KB",
      "has_placeholders": true,
      "placeholders": [
        {
          "field": "NazwaFirmyKlienta",
          "type": "text",
          "required": true,
          "description": "Pełna nazwa firmy klienta",
          "example": "ABC Sp. z o.o."
        },
        {
          "field": "Sygnatura-sprawy",
          "type": "text",
          "required": false,
          "description": "Sygnatura lub numer sprawy",
          "example": "WF/2024/123"
        },
        {
          "field": "Temat",
          "type": "text",
          "required": true,
          "description": "Temat oferty / tytuł projektu",
          "example": "Usługi księgowe i doradztwo podatkowe"
        },
        {
          "field": "Termin",
          "type": "date",
          "required": true,
          "description": "Termin realizacji lub data oferty",
          "example": "2024-11-30"
        },
        {
          "field": "waznosc-oferty",
          "type": "text",
          "required": true,
          "description": "Ważność oferty (liczba dni lub data)",
          "example": "30 dni"
        }
      ],
      "notes": "Podstawowe dane identyfikacyjne oferty"
    },

    "doc3.docx": {
      "order": 3,
      "name": "Spis treści",
      "description": "Automatycznie generowany spis treści z produktami",
      "size": "~358KB",
      "has_placeholders": false,
      "placeholders": [],
      "is_toc": true,
      "notes": "Spis treści generowany automatycznie na podstawie wybranych produktów. Format: §\\tUsługa {nr} – {nazwa} ………….……  {strona}",
      "toc_config": {
        "start_page": 5,
        "format": "§\\tUsługa {number} – {title} ………….……  {page}"
      }
    },

    "doc4.docx": {
      "order": 4,
      "name": "Podsumowanie",
      "description": "Podsumowanie oferty z wynagrodzeniem i czasem pracy",
      "size": "~362KB",
      "has_placeholders": true,
      "placeholders": [
        {
          "field": "Szacowanyczaspracy",
          "type": "text",
          "required": true,
          "description": "Szacowany czas realizacji projektu",
          "example": "2-3 miesiące"
        },
        {
          "field": "Wynagrodzenie",
          "type": "text",
          "required": true,
          "description": "Łączne wynagrodzenie za usługi",
          "example": "15 000 PLN netto"
        }
      ],
      "notes": "Podsumowanie finansowe i czasowe. Produkty wstawiane są PRZED tym plikiem."
    },

    "Dok5.docx": {
      "order": 5,
      "name": "Warunki",
      "description": "Warunki współpracy i dodatkowe informacje",
      "size": "~28KB",
      "has_placeholders": false,
      "placeholders": [],
      "notes": "Standardowe warunki umowy i współpracy"
    },

    "Dok6.docx": {
      "order": 6,
      "name": "Strona końcowa",
      "description": "Końcowa strona oferty z danymi kontaktowymi",
      "size": "~80KB",
      "has_placeholders": false,
      "placeholders": [],
      "notes": "Zamknięcie oferty z danymi kontaktowymi"
    }
  },

  "injection_point": {
    "type": "between_files",
    "after": "doc3.docx",
    "before": "doc4.docx",
    "description": "Produkty wstawiane są po spisie treści, przed podsumowaniem"
  },

  "all_fields_summary": {
    "total_placeholders": 7,
